<div class="flex flex-col items-center justify-center min-h-screen bg-gray-50">
  <div class="w-full max-w-xl bg-white rounded-xl shadow-lg p-8 border border-purple-100">
    <h3 class="text-xl font-bold mb-4 text-purple-700 text-center"><%= @question.title %></h3>
    <p class="mb-6 text-gray-700 text-center"><%= @question.description %></p>

    <%= form_with url: answer_question_path(@parent), method: :post, class: "space-y-6" do |f| %>
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
        <% @question.choices.each do |choice| %>
          <div class="flex items-center bg-gray-50 rounded p-3 shadow-sm hover:bg-purple-50 transition justify-center">
            <%= hidden_field_tag :question_id, @question.id %>
            <%= radio_button_tag :choice_id, choice.id, false, class: "accent-purple-500 mr-3" %>
            <span class="text-gray-800 text-lg"><%= choice.content %></span>
          </div>
        <% end %>
      </div>
      <div class="flex justify-center">
        <%= f.submit "回答する", class: "mt-4 px-6 py-2 bg-purple-500 hover:bg-purple-600 text-white font-bold rounded-full transition" %>
      </div>
    <% end %>
  </div>
</div>