<div class="bg-white rounded-xl shadow-lg p-6 hover:bg-purple-50 transition border border-purple-100 flex flex-col">
  <div class="flex items-center justify-between w-full mb-2">
    <%= link_to parent.title, start_question_path(parent), class: "text-lg font-semibold text-gray-800 hover:underline" %>
    <% if current_user.own?(parent) %>
      <div class="flex gap-2">
        <%= link_to "編集", edit_question_path(parent), class: "text-purple-600 hover:underline" %>
        <%= link_to "削除", question_path(parent), method: :delete, data: { turbo_confirm: t('defaults.delete_confirm') }, class: "text-red-500 hover:underline" %>
      </div>
    <% end %>
  </div>
</div>