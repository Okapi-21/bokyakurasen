<div class="max-w-2xl mx-auto bg-white rounded-lg shadow-md p-8 mt-10">
  <h1 class="text-3xl font-bold text-purple-700 mb-6 border-b pb-2"><%= @question.title %></h1>

  <div class="mb-6 text-gray-600">
    <p>
      <strong class="text-purple-600">作成者:</strong>
      <span class="font-semibold"><%= @question.user.name %></span>
    </p>
    <p>
      <strong class="text-purple-600">作成日:</strong>
      <span><%= l(@question.created_at, format: :long) %></span>
    </p>
  </div>

  <div class="mb-8">
    <strong class="text-purple-600">内容:</strong>
    <div class="bg-gray-50 rounded p-4 mt-2 text-gray-800 whitespace-pre-line">
      <%= simple_format(@question.description) %>
    </div>
  </div>


  <div class="flex space-x-4 mb-6">
    <% if @question.user == current_user %>
      <%= link_to "編集", edit_question_path(@question), class: "px-6 py-2 bg-blue-500 hover:bg-blue-600 text-white font-bold rounded-full transition" %>
      <%= link_to question_path(@question), 
                  data: { turbo_method: :delete, turbo_confirm: "本当に削除しますか？" }, 
                  class: "px-6 py-2 bg-red-500 hover:bg-red-600 text-white font-bold rounded-full transition" do %>
        削除
      <% end %>
    <% end %>
    <%= link_to "一覧へ戻る", questions_path, class: "px-6 py-2 bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold rounded-full transition" %>
  </div>
</div>