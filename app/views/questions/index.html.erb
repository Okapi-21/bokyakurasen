<div class="flex flex-col items-center justify-center min-h-screen bg-gray-50">
  <h2 class="text-2xl font-bold mb-6 text-purple-700 text-center">問題一覧</h2>
  <%= link_to "作成する", new_question_path %>
  <ul class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 w-full max-w-6xl">
    <% @parents.each do |parent| %>
      <li class="bg-white rounded-xl shadow-lg p-6 flex flex-col items-center hover:bg-purple-50 transition border border-purple-100">
        <span class="text-lg font-semibold text-gray-800 mb-4 text-center"><%= parent.title %></span>
        <%= link_to "解いてみる", start_question_path(parent), class: "px-5 py-2 bg-purple-500 hover:bg-purple-600 text-white rounded-full font-bold shadow transition" %>
      </li>
    <% end %>
  </ul>
</div>