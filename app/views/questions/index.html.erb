<h1 class="text-3xl font-bold text-purple-700 mb-8 text-center tracking-widest">問題一覧</h1>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
  <% @questions.each do |question| %>
    <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-xl transition flex flex-col justify-between">
      <div>
        <h2 class="text-xl font-bold text-purple-700 mb-2">
          <%= link_to question.title, question_path(question), class: "hover:underline" %>
        </h2>
        <p class="text-gray-600 mb-4">
          作成者: <span class="font-semibold"><%= question.user.name %></span>
        </p>
        <p class="text-gray-400 text-sm mb-4">
          作成日: <%= l(question.created_at, format: :short) %>
        </p>
      </div>
      <% if question.user == current_user %>
        <div class="mt-4 flex space-x-4">
          <%= link_to "編集", edit_question_path(question), class: "text-blue-500 hover:underline font-semibold" %>
          <%= link_to "削除", question, method: :delete, data: { confirm: "本当に削除しますか？" }, class: "text-red-500 hover:underline font-semibold" %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>